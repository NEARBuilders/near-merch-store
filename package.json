{
  "name": "monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "ui"
    ],
    "catalog": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "@tanstack/react-query": "^5.90.11",
      "@tanstack/react-router": "^1.153.2",
      "near-kit": "^0.10.0",
      "@hot-labs/near-connect": "^0.8.2",
      "drizzle-orm": "^0.45.1",
      "drizzle-kit": "^0.31.8",
      "@libsql/client": "^0.17.0",
      "better-auth": "^1.4.15",
      "better-near-auth": "^0.3.4",
      "every-plugin": "0.8.8",
      "typescript": "^5.9.3",
      "vitest": "^4.0.17",
      "@types/node": "^25.0.3",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "effect": "^3.19.15"
    }
  },
  "scripts": {
    "init": "bun run db:migrate",
    "bos": "bunx everything-dev@latest",
    "dev": "bunx everything-dev@latest dev --host=remote",
    "dev:ui": "bunx everything-dev@latest dev --host=remote --api=remote",
    "dev:api": "bunx everything-dev@latest dev --host=remote --ui=remote",
    "dev:host": "bunx everything-dev@latest dev --api=remote --ui=remote",
    "dev:proxy": "bunx everything-dev@latest dev --host=remote --proxy",
    "build": "bunx everything-dev@latest build",
    "build:api": "bun run --cwd api rsbuild build",
    "build:host": "bun run --cwd host rsbuild build",
    "build:ui": "bun run --cwd ui rsbuild build",
    "deploy": "NODE_ENV=production bun run build:ui && bun run build:api",
    "typecheck": "bun run --cwd host tsc --noEmit && bun run --cwd ui tsc --noEmit && bun run --cwd api tsc --noEmit",
    "start": "NODE_ENV=production bunx everything-dev@latest start --no-interactive",
    "db:push": "bun run --cwd host drizzle-kit push",
    "db:studio": "bun run --cwd host drizzle-kit studio",
    "db:generate": "bun run --cwd host drizzle-kit generate",
    "db:migrate": "bun run --cwd host drizzle-kit migrate"
  },
  "packageManager": "bun@1.2.20",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
