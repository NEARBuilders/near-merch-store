{
  "name": "marketplace-demo",
  "private": true,
  "workspaces": [
    "api",
    "host",
    "ui"
  ],
  "scripts": {
    "dev": "turbo dev",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "dev:ui": "USE_REMOTE_API=true turbo dev --filter=host --filter=marketplace_ui",
    "dev:api": "USE_REMOTE_UI=true turbo dev --filter=host --filter=marketplace-api",
    "start": "turbo preview --filter=host",
    "build": "turbo build",
    "build:api": "turbo build --filter=marketplace-api",
    "build:host": "turbo build --filter=host",
    "build:ui": "turbo build --filter=marketplace_ui",
    "deploy": "NODE_ENV=production turbo build --filter=marketplace_ui --filter=marketplace-api",
    "typecheck": "turbo typecheck",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "turbo": "^2.6.3"
  },
  "packageManager": "bun@1.2.20"
}
